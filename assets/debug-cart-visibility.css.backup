/*
  Debug Cart Visibility
  ====================
  This CSS file adds visual debugging to help identify cart visibility issues.
  It makes the cart elements more prominent with outlines and background colors.
  Remove this file in production after fixing visibility issues.
*/

/* Make cart container visually prominent */
.mobile-only-cart {
  outline: 2px solid red !important; 
  background: rgba(255, 0, 0, 0.1) !important;
  min-width: 40px !important;
  min-height: 40px !important;
  visibility: visible !important;
  opacity: 1 !important;
  pointer-events: auto !important;
}

/* Ensure cart icon is visible */
.mobile-only-cart .header__icon--cart {
  outline: 2px solid blue !important;
  background: rgba(0, 0, 255, 0.1) !important;
  min-width: 30px !important;
  min-height: 30px !important;
  visibility: visible !important;
  opacity: 1 !important;
  pointer-events: auto !important;
}

/* Make SVG wrapper visible */
.mobile-only-cart .svg-wrapper {
  outline: 2px solid green !important;
  background: rgba(0, 255, 0, 0.1) !important;
  min-width: 20px !important;
  min-height: 20px !important;
  display: flex !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Make SVG icon visible */
.mobile-only-cart .svg-wrapper svg {
  fill: currentColor !important;
  color: black !important;
  min-width: 20px !important;
  min-height: 20px !important;
  visibility: visible !important;
  opacity: 1 !important;
}

/* Ensure header has proper stacking context */
.header {
  position: relative;
  z-index: 100;
}

/* Ensure header sortable layout doesn't hide elements */
.header__sortable-layout {
  position: relative;
  overflow: visible !important;
}

/* Override any hiding styles */
.header *[style*="display: none"],
.header *[style*="visibility: hidden"],
.header *[style*="opacity: 0"] {
  display: initial !important;
  visibility: visible !important;
  opacity: 1 !important;
}