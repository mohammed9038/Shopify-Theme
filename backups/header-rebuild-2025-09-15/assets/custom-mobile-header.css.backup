/**
 * Custom Mobile Header Layout
 * 
 * A professional mobile header implementation featuring:
 * - Hamburger menu (left)
 * - Logo (center)
 * - Cart (right)
 * 
 * This provides a consistent mobile experience regardless of theme settings.
 * Updated with enhanced styling for professional appearance.
 */

/* Mobile cart visibility management - hidden by default on all screens */
.mobile-only-cart {
  display: none !important;
}

/* Desktop header optimizations */
@media screen and (min-width: 750px) {
  /* Hide mobile cart on desktop - make sure it's completely hidden */
  .mobile-only-cart {
    display: none !important;
    visibility: hidden !important;
    opacity: 0 !important;
    pointer-events: none !important;
    width: 0 !important;
    height: 0 !important;
    overflow: hidden !important;
    position: absolute !important;
  }
  
  /* Optimize desktop header layout */
  .header.page-width {
    padding-left: 2rem;
    padding-right: 2rem;
    max-width: 100%;
  }
  
  /* Better space utilization for header items */
  .header__sortable-layout {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }
  
  /* Logo positioning optimization */
  .header__item--logo {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 0 0 auto;
  }
  
  /* Fixed width for cart to prevent layout shift */
  .header__item--cart {
    width: auto;
    margin-left: auto;
  }
}

@media screen and (max-width: 749px) {
  /* Mobile cart visibility - only shown on mobile */
  .mobile-only-cart {
    display: flex !important;
  }
  
  /* Mobile header grid layout - single line layout */
  .header__sortable-layout {
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: space-between;
    padding: 10px 15px;
    flex-wrap: nowrap;
    height: 55px; /* Reduced height to eliminate extra white space */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    background-color: var(--color-background);
  }
  
  /* Ensure header is properly sized */
  .header {
    min-height: unset;
    padding: 0;
  }
  
  /* Reset element ordering */
  .header__item {
    order: unset;
    width: auto;
    flex: none;
    margin: 0;
    justify-content: center;
  }
  
  /* Menu drawer positioning */
  header-drawer {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    padding: 0;
  }
  
  /* Logo positioning */
  .header__item--logo {
    flex: 1 1 auto;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    max-height: 100%;
    overflow: visible;
    margin: 0;
    padding-left: 0;
    padding-right: 15px; /* Add spacing to the right of logo toward cart */
  }
  
  /* Standard cart positioning */
  .header__item--cart {
    flex: 0 0 auto;
    display: flex;
    margin-right: 0;
    align-items: center;
    padding-right: 0;
  }
  
  /* Specific spacing for mobile cart after logo */
  .mobile-only-cart {
    margin-left: auto; /* Push cart to the right */
    padding-right: 0;
  }
  
  /* Element visibility management */
  .header__item--menu,
  .header__item--search,
  .header__item--account,
  .header__item--language {
    display: none;
  }
  
  /* Mobile cart component */
  .mobile-only-cart {
    position: relative;
    z-index: 999; /* Extremely high z-index to ensure visibility above all elements */
    display: flex !important;
    align-items: center;
  }
  
  /* Cart icon styling */
  .mobile-only-cart .header__icon--cart {
    padding: 8px;
    display: flex !important;
    align-items: center;
    justify-content: center;
    visibility: visible !important;
    opacity: 1 !important;
    position: relative;
  }
  
  /* Cart icon SVG - LARGER SIZE */
  .mobile-only-cart .svg-wrapper svg {
    width: 28px;
    height: 28px;
    display: block !important;
    stroke-width: 1.5px;
  }
  
  /* Cart component visibility */
  .mobile-only-cart .header__item--cart,
  .mobile-only-cart .header__icon--cart,
  .mobile-only-cart .svg-wrapper {
    display: flex !important;
    visibility: visible !important;
    opacity: 1 !important;
  }
  
  /* Hide default cart */
  .header__sortable-layout > .header__item--cart {
    display: none;
  }
  
  /* Icon styling consistency */
  .header__icon--menu, 
  .header__icon--cart {
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Hamburger menu icon size to match cart */
  .header__icon--menu svg {
    width: 28px;
    height: 28px;
    stroke-width: 1.5px;
  }
  
  /* Improve menu button appearance */
  .header__icon--menu {
    padding: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  /* Logo sizing for mobile */
  .header__heading-logo-wrapper {
    max-width: 180px;
    width: auto;
    max-height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .header__heading-logo {
    max-height: 45px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
    display: block;
  }
  
  /* Logo link styling */
  .header__heading-link {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
  }
  
  /* SVG wrapper visibility */
  .header__icon--cart .svg-wrapper {
    display: flex;
  }
  
  /* Cart counter styling */
  .mobile-only-cart .cart-count-bubble {
    position: absolute;
    top: 0;
    right: 0;
    transform: translate(25%, -25%);
    min-width: 18px;
    height: 18px;
    display: flex !important;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 11px;
    padding: 0 4px;
    border-radius: 10px;
    background-color: var(--color-button);
    color: var(--color-button-text);
    border: 2px solid var(--color-background);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }
  
  /* Layout adjustment */
  .header__item--menu {
    margin-bottom: 0;
  }
}