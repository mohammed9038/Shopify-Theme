{%- comment -%}
  Professional Header Navigation Component - Premium Design
  Renders main navigation with dropdowns and mobile optimization
{%- endcomment -%}

{%- liquid
  assign menu = section.settings.menu
  assign menu_items = linklists[menu].links
  assign show_desktop_nav = section.settings.enable_desktop_navigation
  assign show_mega_menu = section.settings.enable_mega_menu
  assign max_menu_depth = section.settings.max_menu_depth | default: 2
-%}

{%- if show_desktop_nav and menu_items.size > 0 -%}
  <nav class="header__navigation navigation" role="navigation" aria-label="{{ 'sections.header.navigation' | t }}">
    <ul class="header__nav-list list-unstyled" role="list">
      {%- for link in menu_items -%}
        {%- liquid
          assign has_dropdown = false
          assign is_mega_menu = false

          if link.links.size > 0
            assign has_dropdown = true
            if show_mega_menu and link.links.size > 6
              assign is_mega_menu = true
            endif
          endif

          assign link_classes = 'header__nav-link'
          if link.current
            assign link_classes = link_classes | append: ' header__nav-link--current'
          endif
          if has_dropdown
            assign link_classes = link_classes | append: ' header__nav-link--has-dropdown'
          endif
        -%}

        <li class="header__nav-item{% if has_dropdown %} header__nav-item--has-dropdown{% endif %}{% if is_mega_menu %} header__nav-item--mega-menu{% endif %}">
          {%- if has_dropdown -%}
            <details class="header__nav-dropdown{% if is_mega_menu %} header__nav-dropdown--mega{% endif %}">
              <summary class="{{ link_classes }}"
                       aria-expanded="false"
                       aria-controls="dropdown-{{ forloop.index }}">
                {{ link.title }}
                <span class="header__nav-arrow">
                  {%- render 'icon-chevron-down' -%}
                </span>
              </summary>

              <div class="header__nav-submenu"
                   id="dropdown-{{ forloop.index }}"
                   role="region"
                   aria-label="{{ link.title }} {{ 'sections.header.submenu' | t }}">

                {%- if is_mega_menu -%}
                  {%- render 'header-mega-menu',
                      menu_items: link.links,
                      parent_title: link.title,
                      max_depth: max_menu_depth
                  -%}
                {%- else -%}
                  {%- render 'header-dropdown-menu',
                      menu_items: link.links,
                      parent_title: link.title,
                      max_depth: max_menu_depth
                  -%}
                {%- endif -%}
              </div>
            </details>
          {%- else -%}
            <a href="{{ link.url }}"
               class="{{ link_classes }}"
               {% if link.current %}aria-current="page"{% endif %}>
              {{ link.title }}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>
{%- endif -%}

<style>
  /* Professional Header Navigation Styles */
  .header__navigation {
    position: relative;
    display: flex;
    align-items: center;
  }

  .header__nav-list {
    display: flex;
    align-items: center;
    gap: 3rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header__nav-item {
    position: relative;
  }

  .header__nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1.2rem 0;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-weight: 500;
    font-size: 1.5rem;
    line-height: 1.3;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border-radius: 0.6rem;
    padding: 1rem 1.2rem;
  }

  .header__nav-link:hover,
  .header__nav-link:focus-visible {
    color: rgb(var(--color-button));
    background: rgba(var(--color-button), 0.05);
    transform: translateY(-0.1rem);
    box-shadow: 0 0.4rem 1.2rem rgba(var(--color-button), 0.15);
  }

  .header__nav-link[aria-current="page"] {
    color: rgb(var(--color-button));
    background: rgba(var(--color-button), 0.08);
    font-weight: 600;
  }

  .header__nav-link[aria-current="page"]::after {
    content: '';
    position: absolute;
    bottom: 0.4rem;
    left: 50%;
    transform: translateX(-50%);
    width: 2.4rem;
    height: 0.2rem;
    background: linear-gradient(90deg, rgb(var(--color-button)), rgb(var(--color-button-secondary, var(--color-button))));
    border-radius: 0.1rem;
  }

  /* Dropdown Styles */
  .header__nav-dropdown {
    position: relative;
  }

  .header__nav-dropdown[open] .header__nav-link--dropdown {
    color: rgb(var(--color-button));
    background: rgba(var(--color-button), 0.08);
    box-shadow: 0 0.4rem 1.2rem rgba(var(--color-button), 0.2);
  }

  .header__nav-submenu {
    position: absolute;
    top: calc(100% + 0.8rem);
    left: 0;
    min-width: 24rem;
    background: rgb(var(--color-background));
    backdrop-filter: blur(1.2rem);
    border: 0.1rem solid rgba(var(--color-foreground), 0.08);
    border-radius: 1.2rem;
    box-shadow: 0 1rem 4rem rgba(var(--color-foreground), 0.12),
                0 0.4rem 1.2rem rgba(var(--color-foreground), 0.08);
    padding: 1.2rem 0;
    margin-top: 0.5rem;
    list-style: none;
    z-index: 10;
    opacity: 0;
    transform: translateY(-1rem) scale(0.95);
    animation: dropdown-enter 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    overflow: hidden;
  }

  @keyframes dropdown-enter {
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .header__nav-submenu-item {
    margin: 0;
  }

  .header__nav-submenu-link {
    display: block;
    padding: 1.2rem 2rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: 1.4rem;
    line-height: 1.4;
    transition: all 0.2s ease;
    position: relative;
  }

  .header__nav-submenu-link:hover,
  .header__nav-submenu-link:focus-visible {
    background: linear-gradient(135deg, rgba(var(--color-button), 0.08), rgba(var(--color-button), 0.04));
    color: rgb(var(--color-button));
    padding-left: 2.4rem;
  }

  .header__nav-submenu-link[aria-current="page"] {
    background: linear-gradient(135deg, rgba(var(--color-button), 0.12), rgba(var(--color-button), 0.06));
    color: rgb(var(--color-button));
    font-weight: 600;
    padding-left: 2.4rem;
  }

  .header__nav-submenu-link[aria-current="page"]::before {
    content: 'â†’';
    position: absolute;
    left: 1.2rem;
    color: rgb(var(--color-button));
    font-weight: bold;
  }

  /* Arrow Styles */
  .header__nav-arrow {
    width: 1.2rem;
    height: 1.2rem;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    color: rgb(var(--color-foreground));
    opacity: 0.7;
  }

  .header__nav-dropdown[open] .header__nav-arrow {
    transform: rotate(180deg);
    color: rgb(var(--color-button));
    opacity: 1;
  }

  /* Responsive Design */
  @media screen and (max-width: 1199px) {
    .header__nav-list {
      gap: 2.5rem;
    }

    .header__nav-link {
      font-size: 1.4rem;
      padding: 0.8rem 1rem;
    }

    .header__nav-submenu {
      min-width: 20rem;
    }
  }

  @media screen and (max-width: 989px) {
    .header__navigation {
      display: none;
    }
  }

  /* High Contrast Support */
  @media (prefers-contrast: high) {
    .header__nav-submenu {
      border-width: 0.2rem;
      box-shadow: 0 0.8rem 3rem rgba(var(--color-foreground), 0.25);
    }

    .header__nav-link:hover,
    .header__nav-link:focus-visible {
      background: rgba(var(--color-button), 0.15);
      box-shadow: 0 0.2rem 0.8rem rgba(var(--color-button), 0.3);
    }
  }

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .header__nav-link,
    .header__nav-submenu-link,
    .header__nav-arrow {
      transition: none;
    }

    .header__nav-submenu {
      animation: none;
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  /* Dark Mode Enhancements */
  @media (prefers-color-scheme: dark) {
    .header__nav-submenu {
      background: rgba(var(--color-background), 0.95);
      backdrop-filter: blur(2rem);
      border-color: rgba(var(--color-foreground), 0.15);
    }
  }
</style>