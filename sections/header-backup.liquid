<style>
  /* Enhanced Header Styles */
  .enhanced-header {
    position: relative;
  }

  .enhanced-header--two-row .top-bar {
    display: block;
  }

  .enhanced-header--single-row .top-bar {
    display: none;
  }

  /* Top Bar Styles */
  .top-bar {
    display: none;
    height: {{ section.settings.top_bar_height }}px;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .top-bar__content {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 {{ section.settings.padding_horizontal }}px;
  }

  /* Main Header Styles */
  .main-header {
    height: {{ section.settings.main_header_height }}px;
    display: flex;
    align-items: center;
  }

  .main-header__content {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 {{ section.settings.padding_horizontal }}px;
    gap: 2rem;
  }

  .main-header__left {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .main-header__center {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .main-header__right {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1.5rem;
  }

  /* Logo positioning */
  .main-header--logo-left .header__logo {
    grid-column: 1;
  }

  .main-header--logo-center .header__logo {
    grid-column: 2;
  }

  /* Search positioning */
  .main-header--search-center .header__search {
    grid-column: 2;
  }

  .main-header--search-right .header__search {
    grid-column: 3;
  }

  /* Mobile Header Styles */
  .mobile-header {
    display: none;
    height: 60px;
    align-items: center;
    padding: 0 1.5rem;
  }

  .mobile-header__content {
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    width: 100%;
    gap: 1rem;
  }

  .mobile-header__hamburger {
    grid-column: 1;
  }

  .mobile-header__logo {
    grid-column: 2;
    justify-self: {{ section.settings.mobile_logo_position }};
  }

  .mobile-header__cart {
    grid-column: 3;
  }

  /* Responsive Behavior */
  @media screen and (max-width: 989px) {
    .enhanced-header .top-bar,
    .enhanced-header .main-header {
      display: none;
    }

    .enhanced-header .mobile-header {
      display: flex;
    }
  }

  /* Mobile Drawer Enhancements */
  .mobile-drawer__section {
    padding: 2rem 0;
    border-bottom: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .mobile-drawer__section:last-child {
    border-bottom: none;
  }

  .mobile-drawer__section-title {
    font-size: 1.6rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-align: center;
  }

  /* Header utilities */
  .header__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: none;
    background: transparent;
    color: rgb(var(--color-foreground));
    cursor: pointer;
  }

  .header__icon .icon {
    width: 20px;
    height: 20px;
  }

  .header__search-form {
    width: 100%;
    max-width: 400px;
  }

  .section-header {
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  /* Hide elements based on settings */
  {% unless section.settings.enable_search %}
    .header__search {
      display: none !important;
    }
  {% endunless %}

  {% unless section.settings.show_top_bar %}
    .top-bar {
      display: none !important;
    }
  {% endunless %}
</style>

