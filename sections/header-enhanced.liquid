  <link rel="stylesheet" href="{{ 'component-mega-menu.css' | asset_url }}" media="print" onload="this.media='all'">
{%- endif -%}

<style>
  /* Dynamic CSS based on theme settings */
  :root {
    --mobile-logo-position: {{ section.settings.mobile_logo_position }};
    --top-bar-height: {{ section.settings.top_bar_height }}px;
    --main-header-height: {{ section.settings.main_header_height }}px;
    --header-padding-horizontal: {{ section.settings.padding_horizontal }}px;
  }

  .top-bar {
    height: var(--top-bar-height);
  }

  .main-header {
    height: var(--main-header-height);
  }

  .top-bar__content,
  .main-header__content {
    padding: 0 var(--header-padding-horizontal);
  }

  .mobile-header__logo {
    justify-self: {{ section.settings.mobile_logo_position }};
  }

  .section-header {
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }

  /* Hide/show elements based on settings */
  {% unless section.settings.enable_search %}
    .header__search {
      display: none !important;
    }
  {% endunless %}

  {% unless section.settings.show_top_bar %}
    .top-bar {
      display: none !important;
    }
  {% endunless %}

  {% if section.settings.sticky_header_type == 'reduce-logo-size' %}
    .scrolled-past-header .header__heading-logo-wrapper {
      width: 75%;
      transition: width var(--duration-short) ease;
    }
  {% endif %}
</style>

{%- liquid
  assign has_app_block = false
  for block in section.blocks
    if block.type == '@app'
      assign has_app_block = true
    endif
  endfor

  assign social_links = false
  assign localization_forms = false

  if settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_pinterest_link != blank or settings.social_instagram_link != blank or settings.social_youtube_link != blank or settings.social_vimeo_link != blank or settings.social_tiktok_link != blank or settings.social_tumblr_link != blank or settings.social_snapchat_link != blank
    assign social_links = true
  endif

  if localization.available_countries.size > 1 and section.settings.enable_country_selector or section.settings.enable_language_selector and localization.available_languages.size > 1
    assign localization_forms = true
  endif

  assign header_tag = 'div'
  if section.settings.sticky_header_type != 'none'
    assign header_tag = 'sticky-header'
  endif
-%}

<script src="{{ 'cart-notification.js' | asset_url }}" defer="defer"></script>

{%- if section.settings.show_announcement_bar -%}
  <!-- Optional Announcement/Promo Bar -->
  <div class="announcement-promo-bar color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width">
      <p style="margin: 0; font-size: 1.2rem;">Optional Announcement/Promo Bar</p>
    </div>
  </div>
{%- endif -%}

<{{ header_tag }}
  {% if header_tag == 'sticky-header' %}
    data-sticky-type="{{ section.settings.sticky_header_type }}"
  {% endif %}
  class="header-wrapper enhanced-header enhanced-header--{{ section.settings.desktop_layout }} color-{{ section.settings.color_scheme }} gradient{% if section.settings.show_line_separator %} header-wrapper--border-bottom{% endif %}"
>
  <header class="header page-width{% if section.settings.menu_type_desktop == 'drawer' %} drawer-menu{% endif %}{% if section.settings.menu != blank %} header--has-menu{% endif %}{% if has_app_block %} header--has-app{% endif %}{% if social_links %} header--has-social{% endif %}{% if shop.customer_accounts_enabled %} header--has-account{% endif %}{% if localization_forms %} header--has-localizations{% endif %}">
    
    {%- if section.settings.desktop_layout == 'two-row' and section.settings.show_top_bar -%}
      <!-- Desktop Top Bar -->
      <div class="top-bar color-{{ section.settings.top_bar_color_scheme }} gradient">
        <div class="top-bar__content">
          {%- if section.settings.menu != blank -%}
            <nav class="header__inline-menu">
              <ul class="list-menu list-menu--inline" role="list">
                {%- for link in section.settings.menu.links -%}
                  <li>
                    {%- if link.links != blank -%}
                      <details class="disclosure-has-popup" id="Details-HeaderMenu-{{ forloop.index }}">
                        <summary class="header__menu-item list-menu__item link focus-inset" id="HeaderMenu-{{ link.handle }}">
                          <span>{{ link.title | escape }}</span>
                          <span class="svg-wrapper">{{ 'icon-caret.svg' | inline_asset_content }}</span>
                        </summary>
                        <ul class="header__submenu list-menu" role="list">
                          {%- for childlink in link.links -%}
                            <li>
                              <a href="{{ childlink.url }}" class="header__menu-item list-menu__item link link--text focus-inset">
                                {{ childlink.title | escape }}
                              </a>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </details>
                    {%- else -%}
                      <a href="{{ link.url }}" class="header__menu-item list-menu__item link link--text focus-inset">
                        {{ link.title | escape }}
                      </a>
                    {%- endif -%}
                  </li>
                {%- endfor -%}
              </ul>
            </nav>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    <!-- Desktop Main Header -->
    <div class="main-header main-header--logo-{{ section.settings.logo_position }} main-header--search-{{ section.settings.search_position }}">
      <div class="main-header__content">
        
        <!-- Left Section -->
        <div class="main-header__left">
          {%- if section.settings.logo_position == 'left' -%}
            {% render 'header-logo' %}
          {%- endif -%}
          
          {%- if section.settings.desktop_layout == 'single-row' and section.settings.menu != blank -%}
            {%- if section.settings.menu_type_desktop == 'dropdown' -%}
              {% render 'header-dropdown-menu' %}
            {%- elsif section.settings.menu_type_desktop == 'mega' -%}
              {% render 'header-mega-menu' %}
            {%- else -%}
              {% render 'header-drawer-enhanced' %}
            {%- endif -%}
          {%- endif -%}
        </div>

        <!-- Center Section -->
        <div class="main-header__center">
          {%- if section.settings.logo_position == 'center' -%}
            {% render 'header-logo' %}
          {%- endif -%}
          
          {%- if section.settings.search_position == 'center' and section.settings.enable_search -%}
            {% render 'header-search', input_id: 'Search-In-Header' %}
          {%- endif -%}
        </div>

        <!-- Right Section -->
        <div class="main-header__right">
          {%- if section.settings.search_position == 'right' and section.settings.enable_search -%}
            {% render 'header-search', input_id: 'Search-In-Header-Right' %}
          {%- endif -%}

          {%- if localization_forms -%}
            {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
              <div class="localization-form__select">
                <localization-form>
                  {%- form 'localization', id: 'HeaderLanguageForm', class: 'localization-form' -%}
                    <select class="localization-selector link" name="locale_code" aria-label="{{ 'localization.language_label' | t }}">
                      {%- for language in localization.available_languages -%}
                        <option value="{{ language.iso_code }}" lang="{{ language.iso_code }}" {%- if language.iso_code == localization.language.iso_code %} selected{% endif %}>
                          {{ language.endonym_name | capitalize }}
                        </option>
                      {%- endfor -%}
                    </select>
                    <input type="hidden" name="return_to" value="{{ request.full_url }}">
                  {%- endform -%}
                </localization-form>
              </div>
            {%- endif -%}
          {%- endif -%}

          {%- if shop.customer_accounts_enabled and section.settings.enable_customer_avatar -%}
            <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}" class="header__icon header__icon--account link focus-inset">
              <span class="svg-wrapper">{{ 'icon-account.svg' | inline_asset_content }}</span>
              <span class="visually-hidden">
                {%- liquid
                  if customer
                    echo 'customer.account_fallback' | t
                  else
                    echo 'customer.log_in' | t
                  endif
                -%}
              </span>
            </a>
          {%- endif -%}

          <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble">
            {%- liquid
              if cart == empty
                echo '<span class="svg-wrapper">' | append: 'icon-cart-empty.svg' | inline_asset_content | append: '</span>'
              else
                echo '<span class="svg-wrapper">' | append: 'icon-cart.svg' | inline_asset_content | append: '</span>'
              endif
            -%}
            <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
            {%- if cart != empty -%}
              <div class="cart-count-bubble">
                {%- if cart.item_count < 100 -%}
                  <span aria-hidden="true">{{ cart.item_count }}</span>
                {%- endif -%}
                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
              </div>
            {%- endif -%}
          </a>
        </div>
      </div>
    </div>

    <!-- Mobile Header -->
    <div class="mobile-header">
      <div class="mobile-header__content">
        
        <!-- Hamburger Menu -->
        <div class="mobile-header__hamburger">
          {% render 'header-drawer-enhanced' %}
        </div>

        <!-- Mobile Logo -->
        <div class="mobile-header__logo mobile-header__logo--{{ section.settings.mobile_logo_position }}">
          {% render 'header-logo' %}
        </div>

        <!-- Mobile Cart -->
        <div class="mobile-header__cart">
          <a href="{{ routes.cart_url }}" class="header__icon header__icon--cart link focus-inset" id="cart-icon-bubble-mobile">
            {%- liquid
              if cart == empty
                echo '<span class="svg-wrapper">' | append: 'icon-cart-empty.svg' | inline_asset_content | append: '</span>'
              else
                echo '<span class="svg-wrapper">' | append: 'icon-cart.svg' | inline_asset_content | append: '</span>'
              endif
            -%}
            <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
            {%- if cart != empty -%}
              <div class="cart-count-bubble">
                {%- if cart.item_count < 100 -%}
                  <span aria-hidden="true">{{ cart.item_count }}</span>
                {%- endif -%}
                <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
              </div>
            {%- endif -%}
          </a>
        </div>
      </div>
    </div>
  </header>
</{{ header_tag }}>

{%- render 'cart-notification', color_scheme: section.settings.color_scheme -%}

