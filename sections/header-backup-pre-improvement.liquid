{% liquid
  assign logo_width_mobile = section.settings.logo_width_mobile | default: 120
  assign logo_width_desktop = section.settings.logo_width_desktop | default: 180
  assign header_height_mobile = section.settings.header_height_mobile | default: 60
  assign header_height_desktop = section.settings.header_height_desktop | default: 80
  assign enable_transparent_header = section.settings.enable_transparent_header
  assign header_color_scheme = section.settings.header_color_scheme
%}

{% comment %} Critical CSS for header {% endcomment %}
<style>
  :root {
    --header-height-mobile: {{ header_height_mobile }}px;
    --header-height-desktop: {{ header_height_desktop }}px;
    --logo-width-mobile: {{ logo_width_mobile }}px;
    --logo-width-desktop: {{ logo_width_desktop }}px;
    --header-padding-mobile: {{ section.settings.header_padding_mobile | default: 15 }}px;
    --header-padding-desktop: {{ section.settings.header_padding_desktop | default: 20 }}px;
  }

  /* Header Foundation */
  .section-header {
    position: relative;
    z-index: 10;
    {% if enable_transparent_header %}
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      background: transparent;
      z-index: 20;
    {% endif %}
  }

  .header-wrapper {
    {% unless enable_transparent_header %}
      background: rgb(var(--color-background));
      border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
    {% endunless %}
    {% if enable_transparent_header %}
      background: rgba(var(--color-background), 0.95);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    {% endif %}
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-height: var(--header-height-mobile);
    padding: var(--header-padding-mobile) 0;
    position: relative;
  }

  @media screen and (min-width: 750px) {
    .header {
      min-height: var(--header-height-desktop);
      padding: var(--header-padding-desktop) 0;
    }
  }

  /* Sticky Header Behavior */
  .header--sticky {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(var(--color-background), 0.95);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    box-shadow: 0 0.2rem 1rem rgba(var(--color-shadow), 0.1);
    z-index: 100;
    animation: slideDown 0.3s ease-out;
  }

  .header--sticky.header--hidden {
    transform: translateY(-100%);
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Mobile Header Layout */
  .header__mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    gap: 1rem;
  }

  .header__mobile-left,
  .header__mobile-right {
    display: flex;
    align-items: center;
    min-width: 44px;
    height: 44px;
  }

  .header__mobile-center {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Desktop Header Layout */
  .header__desktop {
    display: none;
    align-items: center;
    width: 100%;
    height: 100%;
    gap: {{ section.settings.desktop_spacing | default: 30 }}px;
  }

  .header__desktop-left {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
  }

  .header__desktop-center {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .header__desktop-right {
    flex: 0 0 auto;
    display: flex;
    align-items: center;
    gap: {{ section.settings.icons_spacing | default: 20 }}px;
  }

  @media screen and (min-width: 990px) {
    .header__mobile {
      display: none;
    }
    
    .header__desktop {
      display: flex;
    }
  }

  /* Logo Styles */
  .header__logo {
    display: block;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    transition: opacity 0.2s ease;
    line-height: 0;
  }

  .header__logo:hover {
    opacity: {{ section.settings.logo_hover_opacity | default: 80 | divided_by: 100.0 }};
  }

  .header__logo img {
    height: auto;
    width: var(--logo-width-mobile);
    max-width: var(--logo-width-mobile);
    display: block;
  }

  @media screen and (min-width: 750px) {
    .header__logo img {
      width: var(--logo-width-desktop);
      max-width: var(--logo-width-desktop);
    }
  }

  .header__logo-text {
    font-size: {{ section.settings.logo_text_size_mobile | default: 20 }}px;
    font-weight: {{ section.settings.logo_font_weight | default: 600 }};
    line-height: 1.2;
    margin: 0;
    {% if section.settings.logo_text_transform != 'none' %}
      text-transform: {{ section.settings.logo_text_transform }};
    {% endif %}
  }

  @media screen and (min-width: 750px) {
    .header__logo-text {
      font-size: {{ section.settings.logo_text_size_desktop | default: 24 }}px;
    }
  }

  /* Mobile Menu Button */
  .header__menu-button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 12px;
    margin-left: -12px;
    color: rgb(var(--color-foreground));
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ section.settings.button_border_radius | default: 4 }}px;
    transition: all 0.2s ease;
    width: 44px;
    height: 44px;
  }

  .header__menu-button:hover {
    background-color: rgba(var(--color-foreground), {{ section.settings.button_hover_opacity | default: 5 | divided_by: 100.0 }});
  }

  .header__menu-button:focus-visible {
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: 2px;
  }

  .header__menu-icon {
    width: 24px;
    height: 24px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  .header__menu-icon span {
    display: block;
    width: {{ section.settings.hamburger_width | default: 20 }}px;
    height: {{ section.settings.hamburger_thickness | default: 2 }}px;
    background: rgb(var(--color-foreground));
    margin: {{ section.settings.hamburger_spacing | default: 3 }}px 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: {{ section.settings.hamburger_border_radius | default: 1 }}px;
  }

  /* Menu icon animation */
  .menu-open .header__menu-icon span:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .menu-open .header__menu-icon span:nth-child(2) {
    opacity: 0;
    transform: translateX(20px);
  }

  .menu-open .header__menu-icon span:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  /* Header Actions */
  .header__action {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    border-radius: {{ section.settings.button_border_radius | default: 4 }}px;
    transition: all 0.2s ease;
    position: relative;
    background: none;
    border: none;
    cursor: pointer;
  }

  .header__action:hover {
    background-color: rgba(var(--color-foreground), {{ section.settings.button_hover_opacity | default: 5 | divided_by: 100.0 }});
    transform: translateY(-1px);
  }

  .header__action:focus-visible {
    outline: 2px solid rgb(var(--color-accent));
    outline-offset: 2px;
  }

  .header__action svg {
    width: {{ section.settings.icons_size | default: 20 }}px;
    height: {{ section.settings.icons_size | default: 20 }}px;
  }

  /* Cart Counter */
  .header__cart-count {
    position: absolute;
    top: {{ section.settings.cart_badge_top | default: 6 }}px;
    right: {{ section.settings.cart_badge_right | default: 6 }}px;
    background: rgb(var(--color-accent));
    color: rgb(var(--color-accent-contrast));
    border-radius: 50%;
    min-width: {{ section.settings.cart_badge_size | default: 18 }}px;
    height: {{ section.settings.cart_badge_size | default: 18 }}px;
    padding: 0 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.cart_badge_font_size | default: 11 }}px;
    font-weight: 600;
    line-height: 1;
    animation: cartBadgeAppear 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes cartBadgeAppear {
    0% {
      transform: scale(0.5);
      opacity: 0;
    }
    100% {
      transform: scale(1);
      opacity: 1;
    }
  }

  /* Color Scheme Support */
  {% if header_color_scheme == 'dark' %}
    .section-header {
      --color-background: var(--color-background-dark);
      --color-foreground: var(--color-foreground-dark);
    }
  {% elsif header_color_scheme == 'accent' %}
    .section-header {
      --color-background: var(--color-accent);
      --color-foreground: var(--color-accent-contrast);
    }
  {% endif %}

  /* Reduced Motion Support */
  @media (prefers-reduced-motion: reduce) {
    .header-wrapper,
    .header__logo,
    .header__menu-icon span,
    .header__action,
    .header__cart-count {
      transition: none;
      animation: none;
    }
  }
</style>

