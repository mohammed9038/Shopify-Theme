{% comment %} Professional Header Markup {% endcomment %}
<div class="section-header" id="shopify-section-header">
  <div class="header-wrapper">
    <header class="header page-width" id="header" 
            data-sticky="{{ section.settings.sticky_header_type }}" 
            data-transparent="{{ enable_transparent_header }}">
      
      {% comment %} Mobile Header Layout {% endcomment %}
      <div class="header__mobile">
        {% comment %} Mobile Left: Menu Button {% endcomment %}
        <div class="header__mobile-left">
          {% if section.settings.enable_mobile_menu %}
            <button class="header__menu-button" 
                    aria-controls="mobile-menu-drawer" 
                    aria-expanded="false"
                    aria-label="{{ 'accessibility.menu' | t | default: 'Menu' }}">
              <div class="header__menu-icon" aria-hidden="true">
                <span></span>
                <span></span>
                <span></span>
              </div>
            </button>
          {% endif %}
        </div>
        
        {% comment %} Mobile Center: Logo {% endcomment %}
        <div class="header__mobile-center">
          {% if section.settings.logo %}
            <a href="{{ routes.root_url }}" class="header__logo">
              {%- liquid
                assign logo_width = logo_width_mobile
                assign logo_2x = logo_width | times: 2
              -%}
              <img src="{{ section.settings.logo | image_url: width: logo_2x }}"
                   alt="{{ shop.name | escape }}"
                   width="{{ logo_width }}"
                   height="{{ section.settings.logo.height | divided_by: section.settings.logo.width | times: logo_width | round }}"
                   loading="eager"
                   sizes="(max-width: 749px) {{ logo_width }}px, {{ logo_width_desktop }}px"
                   srcset="{{ section.settings.logo | image_url: width: logo_width }} {{ logo_width }}w,
                           {{ section.settings.logo | image_url: width: logo_2x }} {{ logo_2x }}w">
            </a>
          {% else %}
            <a href="{{ routes.root_url }}" class="header__logo">
              <h1 class="header__logo-text">{{ shop.name }}</h1>
            </a>
          {% endif %}
        </div>
        
        {% comment %} Mobile Right: Actions {% endcomment %}
        <div class="header__mobile-right">
          {% if section.settings.enable_search_mobile %}
            <button class="header__action header__search" 
                    aria-label="{{ 'general.search.search' | t | default: 'Search' }}">
              {% render 'icon-search' %}
            </button>
          {% endif %}
          
          {% if section.settings.enable_account_mobile and shop.customer_accounts_enabled %}
            <a href="{{ routes.account_url }}" 
               class="header__action header__account" 
               aria-label="{{ 'customer.account.title' | t | default: 'Account' }}">
              {% render 'icon-account' %}
            </a>
          {% endif %}
          
          <a href="{{ routes.cart_url }}" 
             class="header__action header__cart" 
             aria-label="{{ 'templates.cart.cart' | t | default: 'Cart' }} ({{ cart.item_count }})">
            {% render 'icon-cart' %}
            {% if cart.item_count > 0 %}
              <span class="header__cart-count">{{ cart.item_count }}</span>
            {% endif %}
          </a>
        </div>
      </div>
      
      {% comment %} Desktop Header Layout {% endcomment %}
      <div class="header__desktop">
        {% comment %} Desktop Layout based on settings {% endcomment %}
        {% case section.settings.desktop_layout %}
          {% when 'logo_left' %}
            <div class="header__desktop-left">
              {% render 'header-logo', logo_width: logo_width_desktop %}
            </div>
            <div class="header__desktop-center">
              {% if section.settings.menu.links.size > 0 %}
                {% render 'header-navigation', menu: section.settings.menu %}
              {% endif %}
            </div>
            <div class="header__desktop-right">
              {% render 'header-actions' %}
            </div>
            
          {% when 'logo_center' %}
            <div class="header__desktop-left">
              {% if section.settings.menu.links.size > 0 %}
                {% render 'header-navigation', menu: section.settings.menu, position: 'left' %}
              {% endif %}
            </div>
            <div class="header__desktop-center">
              {% render 'header-logo', logo_width: logo_width_desktop %}
            </div>
            <div class="header__desktop-right">
              {% render 'header-actions' %}
            </div>
            
          {% when 'logo_right' %}
            <div class="header__desktop-left">
              {% render 'header-actions', position: 'left' %}
            </div>
            <div class="header__desktop-center">
              {% if section.settings.menu.links.size > 0 %}
                {% render 'header-navigation', menu: section.settings.menu %}
              {% endif %}
            </div>
            <div class="header__desktop-right">
              {% render 'header-logo', logo_width: logo_width_desktop %}
            </div>
        {% endcase %}
      </div>
    </header>
  </div>
</div>

