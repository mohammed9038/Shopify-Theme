{% comment %}
  Mobile Menu Drawer
  Touch-friendly mobile navigation with nested menu support
{% endcomment %}

<div class="mobile-menu-overlay" id="mobile-menu-overlay"></div>

<aside class="mobile-menu-drawer" id="mobile-menu-drawer" role="dialog" aria-modal="true" aria-label="{{ 'general.accessibility.menu' | t }}">
  <div class="mobile-menu-drawer__header">
    <h2 class="mobile-menu-drawer__title">{{ 'general.accessibility.menu' | t }}</h2>
    <button class="mobile-menu-drawer__close" 
            aria-label="{{ 'general.accessibility.close' | t }}">
      {% render 'icon-close' %}
    </button>
  </div>
  
  <nav class="mobile-menu-drawer__nav" role="navigation">
    <ul class="mobile-menu-drawer__list">
      {% for link in menu.links %}
        <li class="mobile-menu-drawer__item">
          {% if link.links != blank %}
            {% comment %} Expandable menu item {% endcomment %}
            <details class="mobile-menu-drawer__details">
              <summary class="mobile-menu-drawer__summary">
                <span class="mobile-menu-drawer__link-text">{{ link.title }}</span>
                {% render 'icon-caret' %}
              </summary>
              <ul class="mobile-menu-drawer__submenu">
                <li class="mobile-menu-drawer__subitem">
                  <a href="{{ link.url }}" 
                     class="mobile-menu-drawer__sublink mobile-menu-drawer__sublink--parent"
                     {% if link.current %}aria-current="page"{% endif %}>
                    {{ 'general.accessibility.view_all' | t: title: link.title }}
                  </a>
                </li>
                {% for child_link in link.links %}
                  <li class="mobile-menu-drawer__subitem">
                    <a href="{{ child_link.url }}" 
                       class="mobile-menu-drawer__sublink"
                       {% if child_link.current %}aria-current="page"{% endif %}>
                      {{ child_link.title }}
                    </a>
                  </li>
                {% endfor %}
              </ul>
            </details>
          {% else %}
            {% comment %} Simple menu item {% endcomment %}
            <a href="{{ link.url }}" 
               class="mobile-menu-drawer__link"
               {% if link.current %}aria-current="page"{% endif %}>
              {{ link.title }}
            </a>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    
    {% comment %} Additional menu items {% endcomment %}
    <div class="mobile-menu-drawer__footer">
      <ul class="mobile-menu-drawer__footer-list">
        {% if shop.customer_accounts_enabled %}
          <li>
            <a href="{{ routes.account_url }}" class="mobile-menu-drawer__footer-link">
              {% render 'icon-account' %}
              {% if customer %}
                {{ 'customer.account.title' | t }}
              {% else %}
                {{ 'customer.log_in' | t }}
              {% endif %}
            </a>
          </li>
        {% endif %}
        
        {% comment %} Language/currency selector can be added here {% endcomment %}
      </ul>
    </div>
  </nav>
</aside>

<style>
  /* Mobile Menu Overlay */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(var(--color-foreground), 0.5);
    backdrop-filter: blur(4px);
    z-index: 10;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .menu-open .mobile-menu-overlay {
    opacity: 1;
    visibility: visible;
  }
  
  /* Mobile Menu Drawer */
  .mobile-menu-drawer {
    position: fixed;
    top: 0;
    left: 0;
    width: min(35rem, 85vw);
    height: 100%;
    background: rgb(var(--color-background));
    z-index: 11;
    display: flex;
    flex-direction: column;
    transform: translateX(-100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0.4rem 0 2rem rgba(var(--color-foreground), 0.1);
  }
  
  .mobile-menu-drawer--open {
    transform: translateX(0);
  }
  
  /* Drawer Header */
  .mobile-menu-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem;
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.08);
    background: rgb(var(--color-background));
  }
  
  .mobile-menu-drawer__title {
    font-size: 1.8rem;
    font-weight: 600;
    margin: 0;
    color: rgb(var(--color-foreground));
  }
  
  .mobile-menu-drawer__close {
    background: none;
    border: none;
    padding: 0.8rem;
    margin-right: -0.8rem;
    cursor: pointer;
    color: rgb(var(--color-foreground));
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.4rem;
    transition: background-color 0.2s ease;
  }
  
  .mobile-menu-drawer__close:hover {
    background: rgba(var(--color-foreground), 0.05);
  }
  
  /* Drawer Navigation */
  .mobile-menu-drawer__nav {
    flex: 1;
    overflow-y: auto;
    padding: 1rem 0 2rem;
  }
  
  .mobile-menu-drawer__list {
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .mobile-menu-drawer__item {
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.05);
  }
  
  .mobile-menu-drawer__link,
  .mobile-menu-drawer__summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.6rem 2rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: 1.6rem;
    font-weight: 500;
    line-height: 1.3;
    transition: all 0.2s ease;
    background: none;
    border: none;
    width: 100%;
    cursor: pointer;
  }
  
  .mobile-menu-drawer__link:hover,
  .mobile-menu-drawer__summary:hover {
    background: rgba(var(--color-button), 0.05);
    color: rgb(var(--color-button));
  }
  
  .mobile-menu-drawer__link[aria-current="page"] {
    background: rgba(var(--color-button), 0.1);
    color: rgb(var(--color-button));
    font-weight: 600;
  }
  
  /* Expandable Menu Items */
  .mobile-menu-drawer__details {
    position: relative;
  }
  
  .mobile-menu-drawer__summary {
    list-style: none;
  }
  
  .mobile-menu-drawer__summary::-webkit-details-marker {
    display: none;
  }
  
  .mobile-menu-drawer__link-text {
    flex: 1;
    text-align: left;
  }
  
  .mobile-menu-drawer__summary .icon-caret {
    width: 1.2rem;
    height: 1.2rem;
    transition: transform 0.2s ease;
    color: rgba(var(--color-foreground), 0.6);
  }
  
  .mobile-menu-drawer__details[open] .icon-caret {
    transform: rotate(180deg);
  }
  
  /* Submenu */
  .mobile-menu-drawer__submenu {
    list-style: none;
    margin: 0;
    padding: 0;
    background: rgba(var(--color-foreground), 0.02);
  }
  
  .mobile-menu-drawer__subitem {
    border-bottom: 0.1rem solid rgba(var(--color-foreground), 0.05);
  }
  
  .mobile-menu-drawer__subitem:last-child {
    border-bottom: none;
  }
  
  .mobile-menu-drawer__sublink {
    display: block;
    padding: 1.4rem 2rem 1.4rem 4rem;
    text-decoration: none;
    color: rgba(var(--color-foreground), 0.8);
    font-size: 1.5rem;
    line-height: 1.4;
    transition: all 0.2s ease;
  }
  
  .mobile-menu-drawer__sublink:hover {
    background: rgba(var(--color-button), 0.05);
    color: rgb(var(--color-button));
  }
  
  .mobile-menu-drawer__sublink[aria-current="page"] {
    background: rgba(var(--color-button), 0.1);
    color: rgb(var(--color-button));
    font-weight: 600;
  }
  
  .mobile-menu-drawer__sublink--parent {
    font-weight: 600;
    color: rgb(var(--color-foreground));
  }
  
  /* Drawer Footer */
  .mobile-menu-drawer__footer {
    margin-top: auto;
    padding: 2rem;
    border-top: 0.1rem solid rgba(var(--color-foreground), 0.08);
  }
  
  .mobile-menu-drawer__footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .mobile-menu-drawer__footer-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: 1.5rem;
    font-weight: 500;
    border-radius: 0.6rem;
    transition: background-color 0.2s ease;
  }
  
  .mobile-menu-drawer__footer-link:hover {
    background: rgba(var(--color-button), 0.05);
    color: rgb(var(--color-button));
  }
  
  /* Desktop hide */
  @media screen and (min-width: 990px) {
    .mobile-menu-drawer,
    .mobile-menu-overlay {
      display: none;
    }
  }
  
  /* High contrast support */
  @media (prefers-contrast: high) {
    .mobile-menu-drawer {
      box-shadow: 0.8rem 0 2rem rgba(var(--color-foreground), 0.3);
    }
    
    .mobile-menu-drawer__header,
    .mobile-menu-drawer__item,
    .mobile-menu-drawer__subitem,
    .mobile-menu-drawer__footer {
      border-color: rgba(var(--color-foreground), 0.2);
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .mobile-menu-overlay,
    .mobile-menu-drawer,
    .mobile-menu-drawer__link,
    .mobile-menu-drawer__summary,
    .mobile-menu-drawer__sublink,
    .mobile-menu-drawer__footer-link,
    .icon-caret {
      transition: none;
    }
  }
</style>