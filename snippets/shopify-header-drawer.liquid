{% comment %}
  Renders an optimized header drawer menu for mobile and desktop.
  Supports configurable content order based on section settings.

  Usage:
  Include in header.liquid or other template files
{% endcomment %}

<header-drawer data-breakpoint="{% if section.settings.menu_type_desktop == 'drawer' %}desktop{% else %}tablet{% endif %}">
  <details id="Details-menu-drawer-container" class="menu-drawer-container">
    <summary
      class="header__icon header__icon--menu header__icon--summary link focus-inset"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span>
        {{- 'icon-hamburger.svg' | inline_asset_content -}}
        {{- 'icon-close.svg' | inline_asset_content -}}
      </span>
    </summary>
    <div id="menu-drawer" class="gradient menu-drawer motion-reduce color-{{ section.settings.menu_color_scheme }}">
      <div class="menu-drawer__inner-container">
        
        {%- liquid
          assign drawer_order = section.settings.mobile_drawer_order | default: 'account-language-menu-help'
          assign drawer_sections = drawer_order | split: '-'
        -%}

        {%- for drawer_section in drawer_sections -%}
          {%- case drawer_section -%}
            {%- when 'account' -%}
              {%- if shop.customer_accounts_enabled and section.settings.enable_customer_avatar -%}
                <div class="shopify-drawer-section">
                  <h3 class="shopify-drawer-section-title">
                    {%- if customer -%}
                      {{ 'customer.account_fallback' | t }}
                    {%- else -%}
                      {{ 'customer.log_in' | t }}
                    {%- endif -%}
                  </h3>
                  <div class="shopify-drawer-account">
                    <a
                      href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                      class="shopify-drawer-menu-link"
                    >
                      {%- if customer -%}
                        <span class="svg-wrapper">{{- 'icon-account.svg' | inline_asset_content -}}</span>
                        {{ customer.first_name | default: customer.email }}
                      {%- else -%}
                        <span class="svg-wrapper">{{- 'icon-account.svg' | inline_asset_content -}}</span>
                        {{ 'customer.log_in' | t }} / {{ 'customer.register' | t }}
                      {%- endif -%}
                    </a>
                  </div>
                </div>
              {%- endif -%}
            
            {%- when 'language' -%}
              {%- if localization.available_languages.size > 1 or localization.available_countries.size > 1 -%}
                <div class="shopify-drawer-section">
                  <h3 class="shopify-drawer-section-title">
                    {{ 'sections.header.menu' | t }}
                  </h3>

                  {%- if localization.available_languages.size > 1 -%}
                    <localization-form>
                      {%- form 'localization', id: 'DrawerLanguageForm', class: 'localization-form' -%}
                        <div class="localization-form__select">
                          <h2 class="visually-hidden" id="DrawerLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                          <select class="localization-selector link" name="locale_code" aria-labelledby="DrawerLanguageLabel">
                            {%- for language in localization.available_languages -%}
                              <option value="{{ language.iso_code }}" lang="{{ language.iso_code }}"{%- if language.iso_code == localization.language.iso_code %} selected{% endif %}>
                                {{ language.endonym_name | capitalize }}
                              </option>
                            {%- endfor -%}
                          </select>
                          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
                        </div>
                        <input type="hidden" name="return_to" value="{{ request.full_url }}">
                      {%- endform -%}
                    </localization-form>
                  {%- endif -%}

                  {%- if localization.available_countries.size > 1 -%}
                    <localization-form>
                      {%- form 'localization', id: 'DrawerCountryForm', class: 'localization-form' -%}
                        <div class="localization-form__select">
                          <h2 class="visually-hidden" id="DrawerCountryLabel">{{ 'localization.country_label' | t }}</h2>
                          <select class="localization-selector link" name="country_code" aria-labelledby="DrawerCountryLabel">
                            {%- for country in localization.available_countries -%}
                              <option value="{{ country.iso_code }}"{%- if country.iso_code == localization.country.iso_code %} selected{% endif %}>
                                {{ country.name }} ({{ country.currency.symbol }} {{ country.currency.iso_code }})
                              </option>
                            {%- endfor -%}
                          </select>
                          <span class="svg-wrapper">{{- 'icon-caret.svg' | inline_asset_content -}}</span>
                        </div>
                        <input type="hidden" name="return_to" value="{{ request.full_url }}">
                      {%- endform -%}
                    </localization-form>
                  {%- endif -%}
                </div>
              {%- endif -%}
            
            {%- when 'menu' -%}
              <div class="shopify-drawer-section">
                <ul class="shopify-drawer-menu">
                  {%- for link in section.settings.menu.links -%}
                    <li class="shopify-drawer-menu-item">
                      {%- if link.links != blank -%}
                        <details id="Details-DrawerMenu-{{ forloop.index }}">
                          <summary class="shopify-drawer-menu-link">
                            {{ link.title | escape }}
                            <span class="svg-wrapper">{{- 'icon-arrow.svg' | inline_asset_content -}}</span>
                          </summary>
                          <ul class="shopify-drawer-menu shopify-drawer-submenu">
                            {%- for childlink in link.links -%}
                              <li class="shopify-drawer-menu-item">
                                {%- if childlink.links != blank -%}
                                  <details id="Details-DrawerMenu-{{ forloop.index }}-{{ forloop.parentloop.index }}">
                                    <summary class="shopify-drawer-menu-link">
                                      {{ childlink.title | escape }}
                                      <span class="svg-wrapper">{{- 'icon-arrow.svg' | inline_asset_content -}}</span>
                                    </summary>
                                    <ul class="shopify-drawer-menu shopify-drawer-submenu">
                                      {%- for grandchildlink in childlink.links -%}
                                        <li class="shopify-drawer-menu-item">
                                          <a
                                            href="{{ grandchildlink.url }}"
                                            class="shopify-drawer-menu-link"
                                          >
                                            {{ grandchildlink.title | escape }}
                                          </a>
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  </details>
                                {%- else -%}
                                  <a
                                    href="{{ childlink.url }}"
                                    class="shopify-drawer-menu-link"
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </details>
                      {%- else -%}
                        <a
                          href="{{ link.url }}"
                          class="shopify-drawer-menu-link"
                        >
                          {{ link.title | escape }}
                        </a>
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>

            {%- when 'help' -%}
              <div class="shopify-drawer-section">
                <h3 class="shopify-drawer-section-title">
                  Help Center
                </h3>
                <a href="/pages/help" class="shopify-drawer-menu-link">
                  <span class="svg-wrapper">
                    <svg viewBox="0 0 20 20" class="icon">
                      <path fill="currentColor" d="M10 1a9 9 0 1 0 9 9 9 9 0 0 0-9-9zm0 16.5A7.5 7.5 0 1 1 17.5 10 7.5 7.5 0 0 1 10 17.5z"/>
                      <path fill="currentColor" d="M10 6.5a3.5 3.5 0 0 0-3.5 3.5.75.75 0 0 0 1.5 0 2 2 0 0 1 4 0c0 .75-.75 1.5-1.5 1.5a.75.75 0 0 0-.75.75V14a.75.75 0 0 0 1.5 0v-1.19A3.25 3.25 0 0 0 13.5 10a3.5 3.5 0 0 0-3.5-3.5z"/>
                      <circle fill="currentColor" cx="10" cy="16" r="1"/>
                    </svg>
                  </span>
                  Help Center
                </a>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </details>
</header-drawer>