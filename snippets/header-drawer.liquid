{% comment %}
  Renders a header drawer menu for mobile and desktop.

  Usage:
  {% render 'header-drawer' %}
{% endcomment %}

<header-drawer data-breakpoint="{% if section.settings.menu_type_desktop == 'drawer' %}desktop{% else %}tablet{% endif %}">
  <details id="Details-menu-drawer-container" class="menu-drawer-container">
    <summary class="header__icon header__icon--menu header__icon--summary link focus-inset" aria-label="{{ 'sections.header.menu' | t }}">
      <span>
        {{- 'icon-hamburger.svg' | inline_asset_content -}}
        {{- 'icon-close.svg' | inline_asset_content -}}
      </span>
    </summary>
    <div id="menu-drawer" class="gradient menu-drawer motion-reduce color-{{ section.settings.menu_color_scheme }}">
      <div class="menu-drawer__inner-container">

        {%- comment -%} Mobile Drawer Header with Close Button {%- endcomment -%}
        <div class="menu-drawer__header">
          <h2 class="menu-drawer__title">{{ 'sections.header.menu' | t }}</h2>
          <button
            type="button"
            class="menu-drawer__close-button"
            onclick="document.getElementById('Details-menu-drawer-container').removeAttribute('open')"
            aria-label="{{ 'accessibility.close' | t }}">
            <span class="svg-wrapper">
              {{- 'icon-close.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>

        <div class="menu-drawer__navigation-container">

          {%- comment -%} Account section removed - now available in mobile bottom navigation {%- endcomment -%}

          {%- comment -%} Language Selector Section - Second as per wireframe {%- endcomment -%}
          {%- if localization.available_countries or localization.available_languages -%}
            <div class="menu-drawer__localization header-localization">
              {%- comment -%} Translation/Language Selector for Mobile {%- endcomment -%}
              {%- if section.settings.translation_provider == 'shopify' -%}
                {%- if localization.available_countries and localization.available_countries.size > 1 -%}
                  <localization-form>
                    {%- form 'localization'
                      , id: 'HeaderCountryMobileForm'
                      , class: 'localization-form' -%}
                      <div>
                        <h2 class="visually-hidden" id="HeaderCountryMobileLabel">
                          {{ 'localization.country_label' | t }}
                        </h2>
                        {%- render 'country-localization'
                          , localPosition: 'HeaderCountryMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {% endif %}

                {%- if localization.available_languages and localization.available_languages.size > 1 -%}
                  <localization-form>
                    {%- form 'localization'
                      , id: 'HeaderLanguageMobileForm'
                      , class: 'localization-form' -%}
                      <div>
                        <h2 class="visually-hidden" id="HeaderLanguageMobileLabel">
                          {{ 'localization.language_label' | t }}
                        </h2>
                        {%- render 'language-localization'
                          , localPosition: 'HeaderLanguageMobile' -%}
                      </div>
                    {%- endform -%}
                  </localization-form>
                {% endif %}
              {%- elsif section.settings.translation_provider == 'gtranslate' -%}
                <div class="gtranslate_wrapper translation-widget mobile-translation"></div>
              {%- elsif section.settings.translation_provider == 'custom' and section.settings.custom_translation_code != blank -%}
                <div class="custom-translation-widget mobile-translation">
                  {{ section.settings.custom_translation_code }}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}

          {%- comment -%} Navigation Menu Section - Third as per wireframe {%- endcomment -%}
          <nav class="menu-drawer__navigation">
            <ul class="menu-drawer__menu has-submenu list-menu" role="list">

              {%- comment -%} Demo: Simple Link (Home) {%- endcomment -%}
              <li>
                <a href="{{ routes.root_url }}" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                  Home
                </a>
              </li>

              {%- comment -%} Demo: Menu with Submenu (Products) {%- endcomment -%}
              <li>
                <details id="Details-menu-drawer-products">
                  <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Products
                    <span class="svg-wrapper">
                      {{- 'icon-arrow.svg' | inline_asset_content -}}
                    </span>
                  </summary>
                  <div
                    id="link-products"
                    class="menu-drawer__submenu has-submenu gradient motion-reduce"
                    tabindex="-1">
                    <div class="menu-drawer__inner-submenu">
                      <button
                        class="menu-drawer__close-button link link--text focus-inset"
                        onclick="document.getElementById('Details-menu-drawer-products').removeAttribute('open')"
                        aria-expanded="true">
                        <span class="svg-wrapper">
                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                        </span>
                        Products
                      </button>
                      <ul
                        class="menu-drawer__menu list-menu"
                        role="list"
                        tabindex="-1">
                        <li>
                          <a href="{{ routes.all_products_collection_url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            All Products
                          </a>
                        </li>
                        <li>
                          <a href="{{ collections.featured.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Featured
                          </a>
                        </li>
                        <li>
                          <a href="{{ collections.new.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            New Arrivals
                          </a>
                        </li>
                        <li>
                          <a href="{{ collections.sale.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Sale Items
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </details>
              </li>

              {%- comment -%} Demo: Menu with Multi-level Submenu (Categories) {%- endcomment -%}
              <li>
                <details id="Details-menu-drawer-categories">
                  <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Categories
                    <span class="svg-wrapper">
                      {{- 'icon-arrow.svg' | inline_asset_content -}}
                    </span>
                  </summary>
                  <div
                    id="link-categories"
                    class="menu-drawer__submenu has-submenu gradient motion-reduce"
                    tabindex="-1">
                    <div class="menu-drawer__inner-submenu">
                      <button
                        class="menu-drawer__close-button link link--text focus-inset"
                        onclick="document.getElementById('Details-menu-drawer-categories').removeAttribute('open')"
                        aria-expanded="true">
                        <span class="svg-wrapper">
                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                        </span>
                        Categories
                      </button>
                      <ul
                        class="menu-drawer__menu list-menu"
                        role="list"
                        tabindex="-1">
                        <li>
                          <a href="{{ collections.electronics.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Electronics
                          </a>
                        </li>
                        <li>
                          <details id="Details-menu-drawer-clothing">
                            <summary class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                              Clothing
                              <span class="svg-wrapper">
                                {{- 'icon-arrow.svg' | inline_asset_content -}}
                              </span>
                            </summary>
                            <div id="childlink-clothing" class="menu-drawer__submenu has-submenu gradient motion-reduce">
                              <button
                                class="menu-drawer__close-button link link--text focus-inset"
                                onclick="document.getElementById('Details-menu-drawer-clothing').removeAttribute('open')"
                                aria-expanded="true">
                                <span class="svg-wrapper">
                                  {{- 'icon-arrow.svg' | inline_asset_content -}}
                                </span>
                                Clothing
                              </button>
                              <ul
                                class="menu-drawer__menu list-menu"
                                role="list"
                                tabindex="-1">
                                <li>
                                  <a href="{{ collections['mens-clothing'].url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                                    Men's Clothing
                                  </a>
                                </li>
                                <li>
                                  <a href="{{ collections['womens-clothing'].url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                                    Women's Clothing
                                  </a>
                                </li>
                                <li>
                                  <a href="{{ collections['kids-clothing'].url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                                    Kids Clothing
                                  </a>
                                </li>
                                <li>
                                  <a href="{{ collections.accessories.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                                    Accessories
                                  </a>
                                </li>
                              </ul>
                            </div>
                          </details>
                        </li>
                        <li>
                          <a href="{{ collections['home-garden'].url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Home & Garden
                          </a>
                        </li>
                        <li>
                          <a href="{{ collections.sports.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Sports & Outdoors
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </details>
              </li>

              {%- comment -%} Demo: Another Simple Link {%- endcomment -%}
              <li>
                <a href="/pages/about" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                  About Us
                </a>
              </li>

              {%- comment -%} Demo: Support Menu with Submenu {%- endcomment -%}
              <li>
                <details id="Details-menu-drawer-support">
                  <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Support
                    <span class="svg-wrapper">
                      {{- 'icon-arrow.svg' | inline_asset_content -}}
                    </span>
                  </summary>
                  <div
                    id="link-support"
                    class="menu-drawer__submenu has-submenu gradient motion-reduce"
                    tabindex="-1">
                    <div class="menu-drawer__inner-submenu">
                      <button
                        class="menu-drawer__close-button link link--text focus-inset"
                        onclick="document.getElementById('Details-menu-drawer-support').removeAttribute('open')"
                        aria-expanded="true">
                        <span class="svg-wrapper">
                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                        </span>
                        Support
                      </button>
                      <ul
                        class="menu-drawer__menu list-menu"
                        role="list"
                        tabindex="-1">
                        <li>
                          <a href="/pages/contact" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Contact Us
                          </a>
                        </li>
                        <li>
                          <a href="/pages/faq" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            FAQ
                          </a>
                        </li>
                        <li>
                          <a href="/pages/shipping" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Shipping Info
                          </a>
                        </li>
                        <li>
                          <a href="/pages/returns" class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                            Returns & Exchanges
                          </a>
                        </li>
                      </ul>
                    </div>
                  </div>
                </details>
              </li>

              {%- comment -%} Demo: Final Simple Link {%- endcomment -%}
              <li>
                <a href="/pages/contact" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                  Contact
                </a>
              </li>

            </ul>
          </nav>
        </div>
      </div>
    </div>
  </details>
</header-drawer>