{% comment %}
  Renders header logo component
  Forwards to shopify-header-drawer where actual implementation lives
{% endcomment %}

{%- if section.settings.logo != blank -%}
  <a href="{{ routes.root_url }}">
    <img src="{{ section.settings.logo | image_url: width: 120 }}" alt="{{ shop.name }}" width="120" height="auto" class="shopify-logo-img">
  </a>
{%- else -%}
  <a href="{{ routes.root_url }}" class="shopify-logo-text">{{ shop.name }}</a>
{%- endif -%}