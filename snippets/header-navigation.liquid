{%- comment -%}
  Professional Header Navigation Component
  Renders main navigation with dropdowns and mobile optimization
{%- endcomment -%}

{%- liquid
  assign menu = section.settings.menu
  assign menu_items = linklists[menu].links
  assign show_desktop_nav = section.settings.enable_desktop_navigation
  assign show_mega_menu = section.settings.enable_mega_menu
  assign max_menu_depth = section.settings.max_menu_depth | default: 2
-%}

{%- if show_desktop_nav and menu_items.size > 0 -%}
  <nav class="header__navigation navigation" role="navigation" aria-label="{{ 'sections.header.navigation' | t }}">
    <ul class="navigation__list list-unstyled" role="list">
      {%- for link in menu_items -%}
        {%- liquid
          assign has_dropdown = false
          assign is_mega_menu = false
          
          if link.links.size > 0
            assign has_dropdown = true
            if show_mega_menu and link.links.size > 6
              assign is_mega_menu = true
            endif
          endif
          
          assign link_classes = 'navigation__link'
          if link.current
            assign link_classes = link_classes | append: ' navigation__link--current'
          endif
          if has_dropdown
            assign link_classes = link_classes | append: ' navigation__link--has-dropdown'
          endif
        -%}
        
        <li class="navigation__item{% if has_dropdown %} navigation__item--has-dropdown{% endif %}{% if is_mega_menu %} navigation__item--mega-menu{% endif %}">
          {%- if has_dropdown -%}
            <details class="navigation__dropdown{% if is_mega_menu %} navigation__dropdown--mega{% endif %}">
              <summary class="{{ link_classes }}" 
                       aria-expanded="false"
                       aria-controls="dropdown-{{ forloop.index }}">
                {{ link.title }}
                <span class="navigation__dropdown-icon">
                  {%- render 'icon-chevron-down' -%}
                </span>
              </summary>
              
              <div class="navigation__dropdown-content" 
                   id="dropdown-{{ forloop.index }}"
                   role="region"
                   aria-label="{{ link.title }} {{ 'sections.header.submenu' | t }}">
                
                {%- if is_mega_menu -%}
                  {%- render 'header-mega-menu', 
                      menu_items: link.links,
                      parent_title: link.title,
                      max_depth: max_menu_depth
                  -%}
                {%- else -%}
                  {%- render 'header-dropdown-menu', 
                      menu_items: link.links,
                      parent_title: link.title,
                      max_depth: max_menu_depth
                  -%}
                {%- endif -%}
              </div>
            </details>
          {%- else -%}
            <a href="{{ link.url }}" 
               class="{{ link_classes }}"
               {% if link.current %}aria-current="page"{% endif %}>
              {{ link.title }}
            </a>
          {%- endif -%}
        </li>
      {%- endfor -%}
    </ul>
  </nav>
{%- endif -%}

<style>
  /* Header Navigation Styles */
  .header__navigation {
    position: relative;
  }
  
  .header__nav-list {
    display: flex;
    align-items: center;
    gap: 3rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }
  
  .header__nav-item {
    position: relative;
  }
  
  .header__nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1.2rem 0;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-weight: 500;
    font-size: 1.5rem;
    line-height: 1.3;
    transition: color 0.2s ease;
    position: relative;
  }
  
  .header__nav-link:hover,
  .header__nav-link:focus-visible {
    color: rgb(var(--color-button));
  }
  
  .header__nav-link[aria-current="page"] {
    color: rgb(var(--color-button));
  }
  
  .header__nav-link[aria-current="page"]::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 0.2rem;
    background: rgb(var(--color-button));
  }
  
  /* Dropdown Styles */
  .header__nav-dropdown {
    position: relative;
  }
  
  .header__nav-dropdown[open] .header__nav-link--dropdown {
    color: rgb(var(--color-button));
  }
  
  .header__nav-submenu {
    position: absolute;
    top: 100%;
    left: 0;
    min-width: 20rem;
    background: rgb(var(--color-background));
    border: 0.1rem solid rgba(var(--color-foreground), 0.08);
    border-radius: 0.8rem;
    box-shadow: 0 0.8rem 3rem rgba(var(--color-foreground), 0.1);
    padding: 1rem 0;
    margin-top: 0.5rem;
    list-style: none;
    z-index: 10;
    opacity: 0;
    transform: translateY(-1rem);
    animation: dropdown-enter 0.2s ease forwards;
  }
  
  @keyframes dropdown-enter {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .header__nav-subitem {
    margin: 0;
  }
  
  .header__nav-sublink {
    display: block;
    padding: 1rem 2rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
    font-size: 1.4rem;
    line-height: 1.4;
    transition: all 0.2s ease;
  }
  
  .header__nav-sublink:hover,
  .header__nav-sublink:focus-visible {
    background: rgba(var(--color-button), 0.05);
    color: rgb(var(--color-button));
  }
  
  .header__nav-sublink[aria-current="page"] {
    background: rgba(var(--color-button), 0.1);
    color: rgb(var(--color-button));
    font-weight: 600;
  }
  
  /* Icon Styles */
  .icon-caret {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }
  
  .header__nav-dropdown[open] .icon-caret {
    transform: rotate(180deg);
  }
  
  /* Responsive */
  @media screen and (max-width: 1199px) {
    .header__nav-list {
      gap: 2rem;
    }
    
    .header__nav-link {
      font-size: 1.4rem;
    }
  }
  
  @media screen and (max-width: 989px) {
    .header__navigation {
      display: none;
    }
  }
  
  /* High contrast support */
  @media (prefers-contrast: high) {
    .header__nav-submenu {
      border-width: 0.2rem;
      box-shadow: 0 0.4rem 1.2rem rgba(var(--color-foreground), 0.2);
    }
  }
  
  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .header__nav-link,
    .header__nav-sublink,
    .icon-caret {
      transition: none;
    }
    
    .header__nav-submenu {
      animation: none;
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>